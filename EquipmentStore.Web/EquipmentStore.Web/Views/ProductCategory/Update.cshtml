@model EquipmentStore.Web.Models.ProductCategoryViewModel

@{
    ViewBag.Title = "Изменение категории для оборудования";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-default">
    @using (Html.BeginForm("Update", "ProductCategory", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="panel-body">
            @Html.HiddenFor(m => m.Id)

            <b>
                @Html.LabelFor(m => m.Name)
            </b>
            <p>
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name)
            </p>
        </div>

        <div class="panel-footer">
            <p>
                <button type="submit" class="btn btn-default">Изменить</button>
            </p>

            <p>
                @Html.ActionLink("Назад", "Index", "Admin", null, new { @class = "btn btn-primary" })
            </p>
        </div>
    }
</div>
