@model List<EquipmentStore.Web.Models.ProductCategoryViewModel>

@{
    ViewBag.Title = "Категории оборудования";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Категории для оборудования</h3>
    </div>

    <div class="panel-body">
        @if (Model.Count == 0)
        {
            <p>Каталог категорий для оборудования пуст</p>
        }
        else
        {
            <table class="table table-striped table-bordered">
                <tr>
                    <th style="width:10%;">ID</th>
                    <th style="width:50%;">Название</th>
                    <th style="width:40%;">Действия</th>
                </tr>

                @foreach (var productCategory in Model)
                {
                    <tr>
                        <td>@productCategory.Id</td>
                        <td>@productCategory.Name</td>
                        <td>
                            <p>
                                @Html.ActionLink("Перейти к категории", "Read", "ProductCategory", new { id = productCategory.Id }, new { @class = "btn btn-default" })
                            </p>

                            <p>
                                @Html.ActionLink("Изменить", "Update", "ProductCategory", new { id = productCategory.Id }, new { @class = "btn btn-default" })
                            </p>

                            <p>
                                @using (Html.BeginForm("Delete", "ProductCategory", new { id = productCategory.Id }))
                                {
                                    <input type="submit" class="btn btn-danger" value="Удалить" />
                                }
                            </p>
                        </td>
                    </tr>
                }
            </table>
        }
    </div>

    <div class="panel-footer">
        <p>
            @Html.ActionLink("Добавить новую категорию", "Create", "ProductCategory", null, new { @class = "btn btn-default" })
        </p>

        <p>
            @Html.ActionLink("Назад", "Index", "Admin", null, new { @class = "btn btn-primary" })
        </p>
    </div>
</div>