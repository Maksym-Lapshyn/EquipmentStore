@model EquipmentStore.Web.Models.ProductCategoryViewModel

@{
    ViewBag.Title = "Добавление новой категории для оборудования";
}

<div class="panel panel-default">
    @using (Html.BeginForm("Create", "ProductCategory", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="panel-body">
            @Html.HiddenFor(m => m.Id)

            <b>
                @Html.LabelFor(m => m.Name)
            </b>
            <p>
                @Html.TextAreaFor(m => m.Name, 2, 1, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name)
            </p>
        </div>

        <div class="panel-footer">
            <p>
                <button type="submit" class="btn btn-default">Добавить</button>
            </p>

            <p>
                @Html.ActionLink("Назад", "Index", "Admin", null, new { @class = "btn btn-primary" })
            </p>
        </div>
    }
</div>
