@model List<EquipmentStore.Web.Models.PumpViewModel>

@{
    ViewBag.Title = "Услуги";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Насосы</h3>
    </div>

    <div class="panel-body">
        @if (Model.Count == 0)
        {
            <p>Каталог насосов для выбранной категории пуст</p>
        }
        else
        {
            <table class="table table-striped table-bordered">
                <tr>
                    <th style="width:10%;">ID</th>
                    <th style="width:50%;">Название</th>
                    <th style="width:40%;">Действия</th>
                </tr>

                @foreach (var pump in Model)
                {
                    <tr>
                        <td>@pump.Id</td>
                        <td>@pump.Name</td>
                        <td>
                            <p>
                                @Html.ActionLink("Изменить", "Update", "Pump", new { id = pump.Id }, new { @class = "btn btn-default" })
                            </p>

                            <p>
                                @using (Html.BeginForm("Delete", "Pump", new { id = pump.Id }))
                                {
                                    <input type="submit" class="btn btn-danger" value="Удалить" />
                                }
                            </p>
                        </td>
                    </tr>
                }
            </table>
        }
    </div>

    <div class="panel-footer">
        <p>
            @Html.ActionLink("Добавить новый насос", "Create", "Pump", new { categoryId = Mo}, new { @class = "btn btn-default" })
        </p>

        <p>
            @Html.ActionLink("Назад", "Index", "Admin", null, new { @class = "btn btn-primary" })
        </p>
    </div>
</div>