@model List<EquipmentStore.Web.Models.PumpCategoryViewModel>

@{
    ViewBag.Title = "Категории насосов";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Категории для насосов</h3>
    </div>

    <div class="panel-body">
        @if (Model.Count == 0)
        {
            <p>Каталог категорий для насосов пуст</p>
        }
        else
        {
            <table class="table table-striped table-bordered">
                <tr>
                    <th style="width:10%;">ID</th>
                    <th style="width:30%;">Название</th>
                    <th style="width:60%;">Действия</th>
                </tr>

                @foreach (var pumpCategory in Model)
                {
                    <tr>
                        <td>@pumpCategory.Id</td>
                        <td>@pumpCategory.Name</td>
                        <td>
                            <p>
                                @Html.ActionLink("Изменить", "Update", "PumpCategory", new { id = pumpCategory.Id }, new { @class = "btn btn-default" })
                            </p>

                            <p>
                                @using (Html.BeginForm("Delete", "PumpCategory", new { id = pumpCategory.Id }))
                                {
                                    <input type="submit" class="btn btn-danger" value="Удалить" />
                                }
                            </p>
                        </td>
                    </tr>
                }
            </table>
        }
    </div>

    <div class="panel-footer">
        <p>
            @Html.ActionLink("Добавить новую категорию", "Create", "PumpCategory", null, new { @class = "btn btn-default" })
        </p>

        <p>
            @Html.ActionLink("Назад", "Index", "Admin", null, new { @class = "btn btn-primary" })
        </p>
    </div>
</div>