@model EquipmentStore.Web.Models.ProductSubCategoryViewModel

@{
    ViewBag.Title = "Добавление новой подкатегории для оборудования";
}

<div class="panel panel-default">
    @using (Html.BeginForm("Create", "ProductSubCategory", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="panel-body">
            @Html.HiddenFor(m => m.Id)
            @Html.HiddenFor(m => m.ProductCategoryId)

            <b>
                @Html.LabelFor(m => m.Name)
            </b>
            <p>
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name)
            </p>
        </div>

        <div class="panel-footer">
            <p>
                <button type="submit" class="btn btn-default">Добавить</button>
            </p>

            <p>
                @Html.ActionLink("Назад", "Index", "Admin", null, new { @class = "btn btn-primary" })
            </p>
        </div>
    }
</div>
